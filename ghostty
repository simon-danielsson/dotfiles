
# === keybinds ===

# Erase All Keyboard Shortcuts
keybind = clear

# Paste
keybind = performable:cmd+v=paste_from_clipboard

# Open Config
keybind = global:cmd+,=open_config
keybind = global:cmd+shift+,=reload_config

# === behaviour ===

# Notifications
desktop-notifications = false

# Clipboard
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# Shell
shell-integration = zsh

# Cursor
mouse-hide-while-typing = true
cursor-opacity = 0.8

# links
link-url = true

# === font ===

font-size = 20
font-family = Maple Mono NF
#font-family = Lilex
#window-inherit-font-size = true

# === window ===

# Save State
window-save-state = always

# Padding
window-padding-x = 40,15
window-padding-y = 15,15
window-padding-balance = true

# General
quit-after-last-window-closed = true
window-subtitle = false
macos-window-shadow = true
window-width = 110
window-height = 40

# === background ===

theme = Atom One Dark
background = #25252d
background-opacity = 0
background-blur = 0

# === quick terminal ===

quick-terminal-position = left
quick-terminal-autohide = true
